<UserControl x:Class="Grapital.ItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="119" d:DesignWidth="119">
    
    <Grid x:Name="LayoutRoot" Tap="LayoutRoot_Tap" Margin="0,0,1,1" Background="#626F6F6F">
        <Image Height="119" Width="119" Name="image"/>
        <Grid Name="grid" Background="#63000000" HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
            <TextBlock TextAlignment="Center" Name="distance" Text="120m" Opacity="0.7"/>
        </Grid>
    </Grid>
</UserControl>
